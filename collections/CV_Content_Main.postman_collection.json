{
  "info": {
    "_postman_id": "cv-content-main",
    "name": "CV Content (Main CRUD)",
    "description": "Main CV content creation and management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All CV Content",
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{authToken}}"
            }
          ]
        },
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/v1/cv-content",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "cv-content"]
        }
      }
    },
    {
      "name": "Get CV Content by ID",
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{authToken}}"
            }
          ]
        },
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/v1/cv-content/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "cv-content", ":id"],
          "variable": [
            {
              "key": "id",
              "value": ""
            }
          ]
        }
      }
    },
    {
      "name": "Create Complete CV Content",
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{authToken}}"
            }
          ]
        },
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"string\",\n  \"templateId\": \"string\",\n  \"HeaderProfileInfo\": {\n    \"firstName\": \"John\",\n    \"lastName\": \"Doe\",\n    \"fullName\": \"John Doe\",\n    \"title\": \"Software Engineer\",\n    \"email\": \"john@example.com\",\n    \"phone\": \"+1234567890\",\n    \"country\": \"USA\",\n    \"socialMedia\": [{\"platform\": \"LinkedIn\", \"link\": \"https://linkedin.com/in/johndoe\"}]\n  },\n  \"ProfessionalSummary\": {\n    \"summary\": \"Experienced software engineer...\"\n  },\n  \"Experience\": [{\n    \"jobTitle\": \"Senior Software Engineer\",\n    \"company\": \"Tech Corp\",\n    \"startDate\": \"2020-01-01\",\n    \"endDate\": \"2024-12-31\",\n    \"description\": \"Lead development...\",\n    \"responsibilities\": [\"Developed web apps\"],\n    \"technologies\": [\"JavaScript\", \"Node.js\"]\n  }],\n  \"Education\": [{\n    \"institution\": \"University\",\n    \"degree\": \"Bachelor of Science\",\n    \"fieldOfStudy\": \"Computer Science\",\n    \"startDate\": \"2016-01-01\",\n    \"endDate\": \"2020-05-01\"\n  }],\n  \"Skills\": [{\n    \"name\": \"JavaScript\",\n    \"category\": \"technical\",\n    \"proficiencyLabel\": \"advanced\"\n  }]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/cv-content",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "cv-content"]
        }
      }
    },
    {
      "name": "Update CV Content",
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{authToken}}"
            }
          ]
        },
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"HeaderProfileInfo\": {\n    \"title\": \"Updated Title\"\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/cv-content/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "cv-content", ":id"],
          "variable": [
            {
              "key": "id",
              "value": ""
            }
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "authToken",
      "value": ""
    }
  ]
}

